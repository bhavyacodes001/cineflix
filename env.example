# Database
MONGODB_URI=mongodb://localhost:27017/movie-ticket-booking

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# ===== Third-Party APIs =====
# TMDB (The Movie Database) API key for fetching movies
# Get one free at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=
TMDB_BASE_URL=https://api.themoviedb.org/3

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cinema API Integration
CINEMA_API_KEY=your_cinema_api_key
CINEMA_API_URL=https://api.cinema-provider.com

# Frontend URL
CLIENT_URL=http://localhost:3000
